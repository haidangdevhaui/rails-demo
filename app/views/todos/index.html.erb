<%= render "_partials/header" %>
<%= render "_partials/flash" %>
<%= link_to '<i class="glyphicon glyphicon-plus"></i> create'.html_safe, {controller: "todos", action: "create"}, class: "btn btn-success" %>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @todos.each do |t| %>
		<tr>
			<td><%= t.id %></td>
			<td><%= t.title %></td>
			<td>
				<div class="btn-group btn-xs" role="group" aria-label="...">
					<%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, {controller: "todos", action: "update", id: t.id}, class: "btn btn-warning" %>
					<%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, {controller: "todos", action: "delete", id: t.id}, class: "btn btn-danger", onclick: "return confirm('Do you want to delete this item?')" %>
				</div>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= will_paginate @todos, renderer: BootstrapPagination::Rails %>